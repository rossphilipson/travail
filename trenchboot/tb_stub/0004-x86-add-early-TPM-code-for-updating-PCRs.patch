+struct tpm *enable_tpm(void)
+{
+	struct tpm *t = &tpm;
+
+	find_interface_and_family(t);
+
+	switch (t->intf) {
+	case TPM_DEVNODE:
+		/* Not implemented yet */
+		break;
+	case TPM_TIS:
+		if (!tis_init(t))
+			goto err;
+		break;
+	case TPM_CRB:
+		if (!crb_init(t))
+			goto err;
+		break;
+	case TPM_UEFI:
+		/* Not implemented yet */
+		break;
+	}
+
+	/* TODO: ACPI TPM discovery */
+
+	return t;
+
+err:
+	return NULL;
+}
